{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": false,
    "removeComments": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "incremental": true,
    "skipLibCheck": true,

    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
